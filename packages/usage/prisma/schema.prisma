generator crud {
  provider = "node ../../node_modules/prisma-next-crud-generator"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String
  name  String
  posts Post[]
}

model Post {
  id       String @id @default(cuid())
  category String
  content  String
  author   User   @relation(fields: [userId], references: [id])
  userId   String
}
